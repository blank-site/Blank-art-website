<settings>
  <image_url>
    <url value="assets/xml/media2.xml"/>
  </image_url>
  
  
  <general_properties>
	 <!-- CSS LINK -->
	<text_css_link value = "assets/css/textStyle2.css"/>
	<!-- ------------------------- -->
	
	<!-- COMPONENT & BANNER WIDTH/HEIGHT & BANNER COLOR/ALPHA -->
	<banner_width value="900"/>
	<preview_height value="400"/>
	<banner_border_color value = "0xff0000"/>
	<banner_border_alpha value = "1"/>
	<banner_border_thickhess value = "0"/>
	<image_padding value="10"/>
	<keep_aspect_ratio value="false"/>
	<banner_background_color1 value = "0xD15600"/>
	<banner_background_color2 value = "0xC79810"/>
	<banner_background_alpha value = "1"/>
	<!-- ------------------------- -->
		
	<!-- IMAGE TRANSITIONS SETTINGS -->
	<image_tween_time value = "1"/>
	<timer_delay value = "5"/>
	<timer_enabled value = "true"/>
	<!-- --------------------------- -->
		
	<!-- IMAGE BACKGROUND SETTINGS -->
	<image_border_color value = "0xD15600"/>
	<image_border_alpha value = "1"/>
	<image_border_thickness value = "3"/>
	<!-- ---------------------------- -->
		
	<!-- BANNER SHADOW SETTINGS -->
	<banner_shadow value = "true"/>
	<banner_shadow_type value="paper"/> <!-- accepted: normal and paper -->
	<banner_shadow_color value = "0x000000"/>
	<banner_shadow_alpha value = "1"/>
	<banner_shadow_distance value = "5"/>
	<!-- --------------------------------- -->
		
	<!-- BANNER ARROWS SETTINGS -->
	<banner_arrows	value = "code"/> <!-- //accepted: images, code  -->
	<banner_arrows_width value = "30"/>
	<banner_arrows_height value = "50"/>
	<banner_arrows_back_color value = "0xD15600"/>
	<banner_arrows_back_over_color	value = "0xC79810"/>
	<banner_arrows_sign_color value = "0xf1f1f3"/>
	<banner_arrows_sign_over_color value = "0xedecf2"/>
	<banner_arrows_sign_thickness value="3"/>
	<!-- --------------------------------- -->
		
	<preloader_color value="0xeabe40"/>
  </general_properties>
  
  <text_properties>
	<!-- TEXT SETTINGS -->
	<text_position value="thumbs_right"/> <!-- accepted: thumbs_left, thumbs_right, bottom, caption -->
	<text_line_alpha value="1"/>
	<text_line_thickness value="2"/>
	<text_line_color value="0xC79810"/>
	<enable_shadow value="true"/>
	<!-- ------------------------------------------ -->
  </text_properties>
  
  <list_properties>
	<list_back_color1 value = "0xD15600"/>
	<list_back_color2 value = "0xD15600"/>
	<list_back_color3 value = "0xD15600"/>
	<list_back_alpha value = "1"/>
	<visible_buttons value = "5"/>
	<thumbnail_width value = "90"/>
	<thumbnail_height value = "50"/>
	<thumbnail_selected_color value = "0xFF0000"/>
	<thumbnail_selected_alpha value = ".5"/>
	<thumbnail_spacing	value = "5"/>
	<thumbnail_effect value="bitmapShine"/> <!-- accepted: selectOver, alphaOver, greyScale, bitmapShine  -->
	
	<list_arrows value = "code"/> <!-- //accepted: images, code -->
	<list_arrows_color value = "0xC79810"/>
	<list_arrows_over_color value="0xC79810"/>
	<list_arrows_alpha value = "1"/>
	<list_arrows_width value = "20"/>
	<list_arrows_height	value = "30"/>
	<list_arrows_thickness value = "2"/>
	
	<border_thickness value = "5"/>
	<border_color value = "0xC79810"/>
	<border_alpha value = "1"/>
  </list_properties>
  
</settings>